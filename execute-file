#include "shell.h"

/**
 * execute - func to execute commands
 * @args: double pointer to the arguments
 * Return: 0 on Success
 */

int execute(char **args)
{
	char *cmd_path = look4cmd_in_path(args[0]);
	pid_t pid, wpid;
	int status;

	if (cmd_path == NULL)
	{
		print_command_not_found(args[0]);
		return (-1);
	}
	pid = fork();

	if (pid == 0)
	{
		if (execve(args[0], args, NULL) == -1)
		{
			perror("execve");
			exit(EXIT_FAILURE);

		}
	}
	else if (pid < 0)
	{
		perror("fork");
		exit(EXIT_FAILURE);
	}
	else
	{
		do {
			wpid = waitpid(pid, &status, WUNTRACED);
		} while (!WIFEXITED(status) && !WIFSIGNALED(status));

		if (wpid == -1)
		{
			perror("waitpid");
			return (-1);
		}
	}
	return (0);
}
