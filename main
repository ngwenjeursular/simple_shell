#include "shell.h"

/**
 * main - entry point
 * Return: 0 (Success)
 */
int main(void)
{
	char *user_Response, **args;
	size_t input_line_size = 0;
	ssize_t nchars_read;

	if (isatty(STDIN_FILENO))
	{
		while (true)
		{
			user_Response = display_prompt();
			args = parse_input(user_Response);

			if (args[0] == NULL)
			{
				free(user_Response);
				free(args);
				continue;
			}
			execute(args);

			free(user_Response);
			free(args);
		}
	}
	else
	{
		while ((nchars_read = getline(&user_Response, &input_line_size, stdin)) != -1)
		{
			if (user_Response[nchars_read - 1] == '\n')
			{
				user_Response[nchars_read - 1] = '\0';
			}
			args = parse_input(user_Response);
			if (args[0] == NULL)
			{
				free(args);
				continue;
			}
			execute(args);
			free(args);
		}
		free(user_Response);
	}
	return (0);
}
