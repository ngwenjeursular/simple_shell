#include "shell.h"

/**
 * look4cmd_in_path - Find the full path of a commnad
 * @cmd: command to search for
 * Return: full path if found, NULL if not
 */
char *look4cmd_in_path(const char *cmd)
{
	char *path = _getenv("PATH");
	char *entire_path = NULL;
	char *dup_path = NULL;
	char *token = NULL;
	size_t command_len, directoryLength, path_len;

	if (path == NULL)
		return (NULL);
	dup_path = strdup(path);
	if (dup_path == NULL)
	{
		perror("strdup");
		exit(EXIT_FAILURE);
	}
	command_len = strlen(cmd);
	token = strtok(dup_path, ":");
	while (token != NULL)
	{
		directoryLength = strlen(token);
		path_len = directoryLength + 1 + command_len + 1;
		entire_path = (char *)malloc(path_len);
		if (entire_path == NULL)
		{
			perror("malloc");
			exit(EXIT_FAILURE);
		}
		strcpy(entire_path, token);
		strcat(entire_path, "/");
		strcat(entire_path, cmd);
		if (access(entire_path, X_OK) == 0)
		{
			free(dup_path);
			return (entire_path);
		}
		free(entire_path);
		token = strtok(NULL, ":");
	}
	free(dup_path);
	return (NULL);
}
